<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- we define background color -->
    <solid android:color="@color/backgroundDark" />

    <!-- we define border color and thick -->
    <stroke
        android:width="0.75dp"
        android:color="@color/iconColor" />

    <!-- add some padding for text inside -->
    <padding
        android:bottom="7.5dp"
        android:left="7.5dp"
        android:right="7.5dp"
        android:top="7.5dp" />

    <!-- we define corner radius, note that radius can be different for each corner -->
    <corners android:radius="5dp" />

</shape>